<project name="org.bonitasoft.studio-build" default="generate" xmlns:gmfAnt="http://ecliptical.ca/gmf/ant">

	<taskdef classpath="antTasks/bonita_antTasks.jar" name="refreshWorkspace" classname="org.bonitasoft.studio.antTasks.RefreshWorkspaceTask"/>

	<target name="generate">
	
	<delete dir="../org.bonitasoft.studio.model"/>
	<delete dir="../org.bonitasoft.studio.model.edit" />
	<delete dir="../org.bonitasoft.studio.diagram/META-INF" />
	<delete dir="../org.bonitasoft.studio.diagram/src" />
	<delete dir="../org.bonitasoft.studio.diagram.form/META-INF" />
	<delete dir="../org.bonitasoft.studio.diagram.form/src" />
	<refreshWorkspace project="org.bonitasoft.studio.diagram"/>
	<refreshWorkspace  project="org.bonitasoft.studio.diagram.form"/>
	<emf.Ecore2Java
			modelpluginid="org.bonitasoft.studio.model"
			modelproject="org.bonitasoft.studio.model"
			model="process.ecore"
			genmodel="process.genmodel"
			modelprojectfragmentpath="src"
			generatejavacode="true"
			generatemodelproject="true"
			generateeditproject="true"
			generateeditorproject="false"
			generatetestsproject="false"
			templatepath="EMFTemplates/"
			jdklevel="6.0"
		/>
		
	
		<refreshWorkspace project="org.bonitasoft.studio-models"/>
		<refreshWorkspace project="org.bonitasoft.studio.model"/>
		<refreshWorkspace project="org.bonitasoft.studio.model.edit"/>
		<refreshWorkspace  project="org.bonitasoft.studio.diagram"/>
		<refreshWorkspace  project="org.bonitasoft.studio.diagram.form"/>
		<gmfAnt:GenerateDiagramCode gmfgenPath="org.bonitasoft.studio-models/process.gmfgen" />

		<refreshWorkspace  project="org.bonitasoft.studio.diagram"/>
		<refreshWorkspace project="org.bonitasoft.studio.diagram.form"/>
		<gmfAnt:GenerateDiagramCode gmfgenPath="org.bonitasoft.studio-models/form/form.gmfgen" />

		<refreshWorkspace project="org.bonitasoft.studio.diagram.form"/>
			<replace file="../org.bonitasoft.studio.model/plugin.properties"
						value="BonitaSoft S.A." token="www.example.org">
			</replace>
			<replace file="../org.bonitasoft.studio.model.edit/plugin.properties"
						value="BonitaSoft S.A." token="www.example.org">
			</replace> 
    </target>
</project>
