<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>all-in-one</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>${project.build.directory}/linux.gtk.x86/BonitaStudio</source>
			<destName>BonitaStudio-linux</destName>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${project.build.directory}/linux.gtk.x86/BonitaStudio.ini</source>
			<destName>BonitaStudio-linux.ini</destName>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${project.build.directory}/linux.gtk.x86_64/BonitaStudio</source>
			<destName>BonitaStudio64-linux</destName>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${project.build.directory}/linux.gtk.x86_64/BonitaStudio.ini</source>
			<destName>BonitaStudio64-linux.ini</destName>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${project.build.directory}/win32.win32.x86_64/BonitaStudio.exe</source>
			<destName>BonitaStudio64.exe</destName>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${project.build.directory}/win32.win32.x86_64/BonitaStudio.ini</source>
			<destName>BonitaStudio64.ini</destName>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${project.build.directory}/macosx.cocoa.x86_64/BonitaStudio.app/Contents/MacOS/BonitaStudio.ini</source>
			<outputDirectory>/BonitaStudio64.app/Contents/MacOS/</outputDirectory>
		</file>
		<file>
			<source>${project.build.directory}/macosx.cocoa.x86_64/BonitaStudio.app/Contents/MacOS/BonitaStudio</source>
			<outputDirectory>/BonitaStudio64.app/Contents/MacOS/</outputDirectory>
		</file>
		<file>
			<source>${project.build.directory}/macosx.cocoa.x86_64/BonitaStudio.app/Contents/Resources/bonitasoft-icon-128-128-transparent.icns</source>
			<outputDirectory>/BonitaStudio64.app/Contents/Resources/</outputDirectory>
		</file>
		<file>
			<source>${project.build.directory}/macosx.cocoa.x86_64/BonitaStudio.app/Contents/Info.plist</source>
			<outputDirectory>/BonitaStudio64.app/Contents/</outputDirectory>
		</file>
	</files>
	
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/linux.gtk.x86</directory>
			<includes>
				<include>**</include>
			</includes>
			<excludes>
				<exclude>BonitaStudio</exclude>
				<exclude>BonitaStudio.ini</exclude>
			</excludes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/linux.gtk.x86_64</directory>
			<includes>
				<include>**</include>
			</includes>
			<excludes>
				<exclude>BonitaStudio</exclude>
				<exclude>BonitaStudio.ini</exclude>
			</excludes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/win32.win32.x86</directory>
			<includes>
				<include>**</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/win32.win32.x86_64</directory>
			<includes>
				<include>**</include>
			</includes>
			<excludes>
				<exclude>BonitaStudio.exe</exclude>
				<exclude>BonitaStudio.ini</exclude>
			</excludes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/macosx.cocoa.x86</directory>
			<includes>
				<include>**</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/macosx.cocoa.x86_64</directory>
			<includes>
				<include>**</include>
			</includes>
			<excludes>
				<exclude>BonitaStudio.app</exclude>
			</excludes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>